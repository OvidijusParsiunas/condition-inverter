{
  "name": "condition-inverter",
  "displayName": "Condition Inverter",
  "description": "Invert conditional statements",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:condition-inverter.invert"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "condition-inverter.invert",
        "title": "Invert text"
      }
    ],
    "keybindings": [
      {
        "command": "condition-inverter.invert",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc --build ./",
    "watch": "tsc --build -watch ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint 'src' '../shared' --ext ts",
    "test": "node ./out/test/runTest.js",
    "testreport": "export COVERAGE=true && npm run test && codecov",
    "format": "prettier --write \"src/**/*.ts\" \"../shared/**/*.ts\""
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.6.1",
    "typescript": "^4.5.5",
    "codecov": "^3.8.3"
  }
}
